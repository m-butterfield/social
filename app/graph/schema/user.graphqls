type User {
  id: String!
  username: String!
  following: [Follow!]!
}

type Follow {
  userID: String!
}

input UserCreds {
  username: String!
  password: String!
}

type Mutation {
  createUser(input: UserCreds!): User!
  followUser(username: String!): Boolean!
  unFollowUser(username: String!): Boolean!
  login(input: UserCreds!): User!
  logout: Boolean!
}

input GetUserInput {
  username: String!
}

type Query {
  me: User
}
