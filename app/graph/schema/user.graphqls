type User {
  username: String!
}

input UserCreds {
  username: String!
  password: String!
}

input FollowUserInput {
  username: String!
}

type Mutation {
  createUser(input: UserCreds!): User!
  followUser(input: FollowUserInput!): Boolean!
  login(input: UserCreds!): User!
  logout: Boolean!
}

type Query {
  me: User
}
