scalar Time

type Post {
  id: String!
  user: User!
  body: String!
  images: [Image!]!
  publishedAt: Time
  commentCount: Int!
}

type Image {
  id: String!
  width: Int!
  height: Int!
}

input CreatePostInput {
  body: String!
  images: [String!]!
}

extend type Mutation {
  createPost(input: CreatePostInput!): Post!
}

extend type Query {
  getPost(id: String!): Post!
  getPosts(before: Time): [Post!]!
  getNewPosts(before: Time): [Post!]!
  getUserPosts(username: String!, before: Time): [Post!]!
}
